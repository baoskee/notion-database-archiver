{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "out",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "jsx": "preserve",
    "baseUrl": "./",
    "sourceMap": true,
    "incremental": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "util/*": ["./util/*"],
      "components/*": ["./components/*"],
      "models/*": ["./models/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
